{
  "name": "staff-request-accepted-notification-publisher",
  "description": "Cloud Function which generates a PubSub notification based on the Firestore update trigger when staff request is accepted",
  "main": "src/index.js",
  "scripts": {
    "start": "functions-framework --source src/index.js --target=publishNotification",
    "lint": "eslint src",
    "test": "NODE_ENV=test nyc mocha tests --recursive --exit"
  },
  "nyc": {
    "all": false,
    "check-coverage": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ],
    "lines": 90,
    "functions": 90,
    "branches": 90,
    "statements": 90,
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.3.0",
    "@google-cloud/pubsub": "^1.1.5",
    "lodash": "^4.17.15",
    "nconf": "^0.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.7",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0"
  },
  "engines": {
    "node": "10"
  }
}
